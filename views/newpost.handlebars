<form action="" id="newPostForm">
  <div class="field">
    <label class="label">Post Title</label>
    <div class="control">
      <input class="input" id="new-post-title" type="text" placeholder="Text input">
    </div>
  </div>

  <div class="field">
    <label class="label">Message</label>
    <div class="control">
      <textarea class="textarea" id="new-post-text" placeholder="Textarea"></textarea>
    </div>
  </div>

  <div class="field is-grouped">
    <div class="control">
      <button class="button is-link" id="new-post-submit">Submit</button>
    </div>
    <div class="control">
      <a class="button is-link is-light" href="/dashboard">Cancel</a>
    </div>
  </div>
</form>

<script src="./js/newpost.js"></script>